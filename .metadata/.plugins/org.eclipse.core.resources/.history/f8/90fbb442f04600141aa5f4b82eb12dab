  def countChange(money: Int, coins: List[Int]): Int =
  	// countCoins(coins)
		countCombinations(coins, 0, 0)

  countChange(1, List(1))
  countChange(2, List(1))
  countChange(4, List(1,2,4))
  countChange(4, List(5,2,4))
  
  
}
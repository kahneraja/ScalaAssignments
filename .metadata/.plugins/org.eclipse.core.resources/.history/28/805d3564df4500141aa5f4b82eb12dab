object Research {
  	def factorial(x: Int): Int =
  		if (x == 0) 1 else x * factorial(x - 1)
                                                  //> factorial: (x: Int)Int
    def fTail(x: Int): Int =
    	if (x == 0) 1 else fTail(x - 1)
  		
  	factorial(5)                              //> res0: Int = 120
  	factorial(1)                              //> res1: Int = 1
  	factorial(2)                              //> res2: Int = 2
  	factorial(3)                              //> res3: Int = 6
  	
  	
  }
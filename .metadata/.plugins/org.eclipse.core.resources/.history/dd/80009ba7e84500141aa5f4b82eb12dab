object Research {
  def factorial(x: Int): Int =
    if (x == 0) 1 else x * factorial(x - 1)
  
  def fTailProduct(x: Int, next: Int): Int =
  	x * fTail(next)
  
  def fTail(x: Int): Int =
    if (x == 0) 1 else fTailProduct(x, x - 1)

  factorial(5)
  factorial(1)
  factorial(2)
  factorial(3)
  
  def filter(chars: List[Char]): List[Char] = chars.filter{ e => e == '(' || e == ')'}
 
  def counter(chars: List[Char], open:Boolean): Boolean =
  	if (chars.isEmpty)
  		false
  	else
  		if (chars.head == '(')
  			counter(chars.tail, true)
  		else
  			if (chars.head == ')')
  				counter(chars.tail, false)
  			else
  				counter(chars.tail, x)
  
  def balance(chars: List[Char]): Boolean =
  		if (counter(chars, false) == false) true else false
  		
  balance("a(b)c d".toList)
  balance("a(bcd".toList)
  balance(")(".toList)
  balance("())(".toList)
	
}